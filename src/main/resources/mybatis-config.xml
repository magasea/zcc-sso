<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J" />
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="generatedKey" value="true"/>
    </settings>

    <typeAliases>
        <package name="com.wensheng.zcc.sso.module.dao.mysql.auto.entity" />
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC">
                <property name="" value="" />
            </transactionManager>
            <dataSource type="UNPOOLED">
                <property name="driver" value="com.mysql.jdbc.Driver" />
                <property name="url" value="jdbc:mysql://localhost:3306/ZCC_AMC" />
                <property name="username" value="root" />
                <property name="password" value="wensheng" />
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!--<mapper resource="mappers/*.xml" />-->
        <!--<mapper resource="mappers/ext/*.xml" />-->
        <package name="com.wensheng.zcc.sso.dao.mysql.mapper" />

    </mappers>
</configuration>